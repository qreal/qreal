<project>
    <shortName>QReal</shortName>
    <fullName>QReal</fullName>
    <version>%version%</version>
    <licenseFile>licenses/gpl-3.0.txt</licenseFile>
    <leftImage>left.png</leftImage>
    <logoImage>logo.png</logoImage>
    <defaultLanguage>en</defaultLanguage>
    <outputDirectory>.</outputDirectory>
    <width>600</width>
    <vendor>SPbSU</vendor>
    <disableSplashScreen>1</disableSplashScreen>
    <enableRollback>0</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <requireInstallationByRootUser>1</requireInstallationByRootUser>

    <componentList>
        <include file="qRealBase.xml" />
        <component>
            <name>default</name>
            <description>Default Component</description>
            <canBeEdited>1</canBeEdited>
            <selected>1</selected>
            <show>1</show>
            <folderList>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfiles</name>
                    <platforms>all</platforms>
                    <shortcutList>
                        <shortcut>
                            <comment>Uninstall</comment>
                            <exec>${installdir}/${uninstallerName}</exec>
                            <icon></icon>
                            <name>Uninstall QReal</name>
                            <path>${installdir}</path>
                            <platforms>windows</platforms>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon></windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfileswindows</name>
                    <platforms>windows</platforms>
                    <shortcutList>
                        <shortcut>
                            <comment></comment>
                            <exec></exec>
                            <icon>${installdir}/icon.ico</icon>
                            <name>QReal</name>
                            <path></path>
                            <platforms>windows</platforms>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/%3.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon>${installdir}/icon.ico</windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall QReal</comment>
                    <name>Uninstall QReal</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment></comment>
                    <name>QReal</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/%3.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}/icon.ico</windowsIcon>
                    <windowsPath></windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <postInstallationActionList>
        <copyFile>
            <destination>${windows_folder_desktopdirectory}/QReal.lnk</destination>
            <origin>${installdir}/QReal.lnk</origin>
        </copyFile>
        <registrySet>
            <key>HKEY_CURRENT_USER\Software\SPbSU\QReal</key>
            <name>installDir</name>
            <type>REG_SZ</type>
            <value>${installdir}</value>
        </registrySet>

        <!-- Associating file extension -->
        <associateWindowsFileExtension>
            <extensions>.qrs</extensions>
            <progID>QReal.Project.2</progID>
            <friendlyName>QReal project</friendlyName>
            <icon>${installdir}\icon.ico</icon>
            <mimeType>application/octet-stream</mimeType>
            <commandList>
                <!-- Defining the 'Open' command -->
                <command>
                    <makeDefault>1</makeDefault>
                    <verb>Open</verb>
                    <runProgram>${installdir}\%3.exe</runProgram>
                    <runProgramArguments>"%L"</runProgramArguments>
                </command>
            </commandList>
        </associateWindowsFileExtension>
    </postInstallationActionList>
    <postUninstallationActionList>
        <deleteFile>
            <path>${windows_folder_desktopdirectory}/QReal.lnk</path>
        </deleteFile>
        <registryDelete>
            <key>HKEY_CURRENT_USER\Software\SPbSU\QReal</key>
            <name>installDir</name>
        </registryDelete>
    </postUninstallationActionList>
    <finalPageActionList>
        <runProgram>
            <program>${installdir}/%3.exe</program>
            <programArguments></programArguments>
            <progressText>Launch QReal</progressText>
        </runProgram>
    </finalPageActionList>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/${product_shortname}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>1</mustBeWritable>
            <mustExist>0</mustExist>
            <width>40</width>
        </directoryParameter>
    </parameterList>
</project>
