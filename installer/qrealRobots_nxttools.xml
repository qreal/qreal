                        </distributionFile>
                        <distributionFile>
                            <origin>%1/bin/qrutils.dll</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <origin>%1/bin/plugins</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>%1/bin/help</origin>
                        </distributionDirectory>
                        <distributionFile>
                            <origin>%2/Qt5Network.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>%2/Qt5CLucene.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>%2/Qt5Help.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>%2/Qt5Sql.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>%2/Qt5Core.dll</origin>
                        </distributionFile>
                        <distributionFile>
