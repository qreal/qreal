                        </distributionFile>
                        <distributionFile>
                            <origin>%2/Qt5Svg.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>%2/Qt5Xml.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>%2/Qt5PrintSupport.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>%2/icuin49.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>%2/libgcc_s_sjlj-1.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>%2/libwinpthread-1.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>%2/libstdc++-6.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>%2/icuuc49.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>%2/icudt49.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>%2/libGLESv2.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>%2/libEGL.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>%2/D3DCompiler_43.dll</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>%1/installer/icon.ico</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>%1/bin/changelog.txt</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>%1/bin/DejaVuSansCondensed.ttf</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <origin>%1/plugins/robots/editor/images</origin>
                        </distributionDirectory>
                    </distributionFileList>
                    <shortcutList>
                        <shortcut>
                            <comment></comment>
                            <exec></exec>
                            <icon>${installdir}/icon.ico</icon>
                            <name>Run QReal-Robots</name>
                            <path></path>
                            <platforms>windows</platforms>
                            <runAsAdmin>0</runAsAdmin>
                            <runInTerminal>0</runInTerminal>
                            <windowsExec>${installdir}/qrgui.exe</windowsExec>
                            <windowsExecArgs></windowsExecArgs>
                            <windowsIcon>${installdir}/icon.ico</windowsIcon>
                            <windowsPath>${installdir}</windowsPath>
                        </shortcut>
                    </shortcutList>
                </folder>
                <!-- NXT Tools -->
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}/nxt-tools</destination>
                    <name>nxttoolsdirectory</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>%1/bin/nxt-tools/upload.sh</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>%1/bin/nxt-tools/flash.bat</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>%1/bin/nxt-tools/upload.bat</origin>
                        </distributionFile>
                        <distributionDirectory>
                            <origin>%1/bin/nxt-tools/GNUARM</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>%1/bin/nxt-tools/nexttool</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>%1/bin/nxt-tools/nxtOSEK</origin>
                        </distributionDirectory>
                        <distributionDirectory>
                            <origin>%1/bin/nxt-tools/cygwin</origin>
                        </distributionDirectory>
                    </distributionFileList>
                </folder>
                <!-- End NXT Tools -->
                <folder>
                    <description>Program Files</description>
                    <destination>${installdir}</destination>
                    <name>programfilesosx</name>
                    <platforms>osx</platforms>
                </folder>
                <folder>
                    <destination>${installdir}/sqldrivers</destination>
                    <name>sqldriverswindows</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>%2/../plugins/sqldrivers/qsqlite.dll</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <destination>${installdir}/platforms</destination>
                    <name>platformswindows</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>%2/../plugins/platforms/qwindows.dll</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
                <folder>
                    <destination>${installdir}/examples</destination>
                    <name>examples</name>
                    <platforms>windows</platforms>
                    <distributionFileList>
                        <distributionFile>
                            <origin>%1/plugins/robots/examples/2dModelExample.qrs</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>%1/plugins/robots/examples/simultaneousSensorReading.qrs</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>%1/plugins/robots/examples/touchObstacle.qrs</origin>
                        </distributionFile>
                        <distributionFile>
                            <origin>%1/plugins/robots/examples/movingAlongTheLine.qrs</origin>
                        </distributionFile>
                    </distributionFileList>
                </folder>
            </folderList>
            <startMenuShortcutList>
                <startMenuShortcut>
                    <comment>Uninstall QReal</comment>
                    <name>Uninstall QReal-Robots</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/${uninstallerName}.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon></windowsIcon>
                    <windowsPath>${installdir}/</windowsPath>
                </startMenuShortcut>
                <startMenuShortcut>
                    <comment></comment>
                    <name>Run QReal-Robots</name>
                    <runAsAdmin>0</runAsAdmin>
                    <runInTerminal>0</runInTerminal>
                    <windowsExec>${installdir}/qrgui.exe</windowsExec>
                    <windowsExecArgs></windowsExecArgs>
                    <windowsIcon>${installdir}/icon.ico</windowsIcon>
                    <windowsPath></windowsPath>
                </startMenuShortcut>
            </startMenuShortcutList>
        </component>
    </componentList>
    <postInstallationActionList>
        <copyFile>
            <destination>${windows_folder_desktopdirectory}/QReal-Robots.lnk</destination>
            <origin>${installdir}/Run QReal-Robots.lnk</origin>
        </copyFile>
        <registrySet>
            <key>HKEY_CURRENT_USER\Software\SPbSU\QReal</key>
            <name>installDir</name>
            <type>REG_SZ</type>
            <value>${installdir}</value>
        </registrySet>
        <associateWindowsFileExtension>
            <extensions>.qrs</extensions>
            <progID>QReal.Project.2</progID>
            <friendlyName>QReal project</friendlyName>
            <icon>${installdir}\icon.ico</icon>
            <mimeType>application/octet-stream</mimeType>
            <commandList>
                <!-- Defining the 'Open' command -->
                <command>
                    <makeDefault>1</makeDefault>
                    <verb>Open</verb>
                    <runProgram>${installdir}\qrgui.exe</runProgram>
                    <runProgramArguments>"%L"</runProgramArguments>
                </command>
            </commandList>
        </associateWindowsFileExtension>
        <runProgram>
            <program>${installdir}/qrgui.exe</program>
            <programArguments>--clear-conf</programArguments>
        </runProgram>
    </postInstallationActionList>
    <postUninstallationActionList>
        <deleteFile>
            <path>${windows_folder_desktopdirectory}/QReal-Robots.lnk</path>
        </deleteFile>
        <registryDelete>
            <key>HKEY_CURRENT_USER\Software\SPbSU\QReal</key>
            <name>installDir</name>
        </registryDelete>
    </postUninstallationActionList>
    <enableRollback>0</enableRollback>
    <enableTimestamp>1</enableTimestamp>
    <requireInstallationByRootUser>1</requireInstallationByRootUser>
    <vendor>SPbSU</vendor>
    <finalPageActionList>
        <runProgram>
            <program>${installdir}/qrgui.exe</program>
            <programArguments></programArguments>
            <progressText>Запустить QReal:Robots</progressText>
        </runProgram>
    </finalPageActionList>
    <parameterList>
        <directoryParameter>
            <name>installdir</name>
            <description>Installer.Parameter.installdir.description</description>
            <explanation>Installer.Parameter.installdir.explanation</explanation>
            <value></value>
            <default>${platform_install_prefix}/${product_shortname}</default>
            <allowEmptyValue>0</allowEmptyValue>
            <cliOptionName>prefix</cliOptionName>
            <mustBeWritable>1</mustBeWritable>
            <mustExist>0</mustExist>
            <width>40</width>
        </directoryParameter>
    </parameterList>
</project>
